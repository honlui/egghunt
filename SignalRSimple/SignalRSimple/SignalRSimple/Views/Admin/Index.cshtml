@{
    ViewBag.Title = "Registration";
}


<br />
<h2>@ViewBag.Title</h2>
<br />
<span style="display:none;" id="message"></span>

<button type="button" id="newTime" class="btn btn-primary" title="" data-container="body" data-toggle="popover" data-placement="bottom" data-content="This is the last time the server sent an update to this page." data-original-title="Time of Last Update">?</button>

<br /><br />

<div style="position: relative;" class="align-items-center">
    <div id="divGroupA" class="card text-white bg-warning mb-3" style="max-width: 20rem; display: inline-block;">
        <div class="card-header">Ages 0-2</div>
        <div class="card-body">
            <p id="pGroupA" class="card-text">?</p>
            <hr />
            <p id="pGroupATotal" class="card-text">?</p>
        </div>
    </div>

    <div id="divGroupB" class="card text-white bg-dark mb-3" style="max-width: 20rem; display: inline-block;">
        <div class="card-header">Ages 3-4</div>
        <div class="card-body">
            <p id="pGroupB" class="card-text">?</p>
            <hr />
            <p id="pGroupBTotal" class="card-text">?</p>
        </div>
    </div>

    <div id="divGroupC" class="card text-white bg-info mb-3" style="max-width: 20rem; display: inline-block;">
        <div class="card-header">Ages 5-6</div>
        <div class="card-body">
            <p id="pGroupC" class="card-text">?</p>
            <hr />
            <p id="pGroupCTotal" class="card-text">?</p>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/jquery.signalR-2.2.3.js"></script>
    <script src="~/SignalR/hubs"></script>
    <script src="~/Scripts/timer.js"></script>
}